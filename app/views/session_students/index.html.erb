<p id="notice"><%= notice %></p>
<% content_for :title, "Lista de sessões do sistema" %>

<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">
      Sessões <small>Visão geral</small>
    </h1>
    <ol class="breadcrumb">
      <li>
        <i class="fa fa-dashboard"></i>
        <%= link_to administrator_path do %>
        Dashboard 
        <% end %>
      </li>
      <li class="active">
        <i class="glyphicon glyphicon-comment"></i> contatos
      </li>
    </ol>
  </div>
</div>

<table class="table table-default">
  <thead>
    <tr>
      <th>Name</th>
      <th>Start session</th>
      <th>End session</th>
      <th>Student</th>
      <th>Status session</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @session_students.each do |session_student| %>
      <tr>
        <td><%= session_student.name %></td>
        <td><%= session_student.start_session %></td>
        <td><%= session_student.end_session %></td>
        <td><%= session_student.student %></td>
        <td><%= session_student.status_session %></td>
        <td><%= link_to 'Show', session_student %></td>
        <td><%= link_to 'Edit', edit_session_student_path(session_student) %></td>
        <td><%= link_to 'Destroy', session_student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Session student', new_session_student_path, class: 'btn btn-success btn-lg'  %>
