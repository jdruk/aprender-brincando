<p id="notice"><%= notice %></p>
<% content_for :title, "Lista de comentarios do sistema" %>

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Contatos <small>Visão geral</small>
        </h1>
        <ol class="breadcrumb">
            <li>
                <i class="fa fa-dashboard"></i>
                <%= link_to administrator_path do %>
                   Dashboard 
                <% end %>
            </li>
            <li class="active">
                <i class="glyphicon glyphicon-comment"></i> contatos
            </li>
        </ol>
    </div>
</div>

<!-- representação de contatos do sistema -->
<div class="row">
    <ul class="timeline">
        <% @contacts.each do |contact| %>
            <li>
              <% if contact.respondido? %>
                <div class="timeline-badge info"><i class="glyphicon glyphicon-check"></i></div>
              <% else %>
                <div class="timeline-badge danger"><i class="glyphicon glyphicon-share"></i></div>
              <% end %>
              <div class="timeline-panel">
                <div class="timeline-heading">
                  <h4 class="timeline-title"><%= contact.name %></h4>
                  <p><small class="text-muted"><i class="glyphicon glyphicon-time"></i> <%= l(contact.created_at) %></small></p>
                </div>
                <div class="timeline-body">
                  <p><%= contact.description %></p>
                  <hr>
                  <div class="btn-group">
                    <button type="button" class="btn btn-primary btn-sm dropdown-toggle" data-toggle="dropdown">
                      <i class="glyphicon glyphicon-cog"></i> <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" role="menu">
                      <li><%= link_to 'Mostrar', contact %></li>
                      <li><%= link_to 'Editar', edit_contact_path(contact) %></li>
                      <li class="divider"></li>
                      <li><%= link_to 'Excluir', contact, method: :delete, data: { confirm: 'Are you sure?' } %></li>
                    </ul>
                  </div>
                </div>
              </div>
            </li>
        <% end %>
      </ul>
</div>
<!-- /representação de contatos do sistema -->